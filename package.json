{
  "name": "dev-scripts",
  "private": "true",
  "workspaces": [
    "packages/util",
    "packages/aws",
    "packages/dentally-util",
    "packages/dentally-scripts",
    "packages/scripts"
  ],
  "scripts": {
    "check-dependencies": "sh ./check-dependencies.sh",
    "check-types": "tsc --noEmit",
    "clean": "rm -rf node_modules bun.lockb",
    "format": "sort-package-json -q 'package.json' 'packages/*/package.json' && prettier --write . --log-level silent",
    "lint": "eslint --ext js,ts,tsx . --fix --max-warnings=0",
    "prepare": "husky install",
    "test": "bun test"
  },
  "dependencies": {
    "depcheck": "1.4.7"
  },
  "devDependencies": {
    "@aryzing/bun-mock-fetch": "1.0.2",
    "@types/bun": "1.2.9",
    "@typescript-eslint/eslint-plugin": "6.7.3",
    "@typescript-eslint/parser": "6.7.3",
    "dependency-cruiser": "16.2.0",
    "eslint": "8.50.0",
    "eslint-plugin-import": "2.28.1",
    "eslint-plugin-simple-import-sort": "10.0.0",
    "husky": "8.0.3",
    "prettier": "3.0.3",
    "sort-package-json": "2.6.0",
    "typescript": "5.2.2"
  }
}
